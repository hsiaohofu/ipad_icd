<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>醫院科別選擇</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .display-text {
            font-size: 2rem;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container text-center">
        <!-- 最上方加大文字顯示區 -->
        <div id="displayText" class="display-text">請選擇科別或症狀</div>

        <!-- 第二行4個button -->
        <div class="row mb-4">
            <div class="col">
                <button class="btn btn-primary" onclick="showSection('internal')">內科</button>
            </div>
            <div class="col">
                <button class="btn btn-primary" onclick="showSection('surgery')">外科</button>
            </div>
            <div class="col">
                <button class="btn btn-primary" onclick="showSection('gynecology')">婦科</button>
            </div>
            <div class="col">
                <button class="btn btn-primary" onclick="showSection('pediatrics')">兒科</button>
            </div>
        </div>

        <!-- 下方4個div, 對應"內外婦兒" -->
        <div id="internal" class="row mb-4 d-none">
            <div class="col">
                <button class="btn btn-secondary" onclick="updateText('AGE')">AGE</button>
            </div>
            <div class="col">
                <button class="btn btn-secondary" onclick="updateText('Dizzy')">Dizzy</button>
            </div>
            <div class="col">
                <button class="btn btn-secondary" onclick="updateText('URI')">URI</button>
            </div>
        </div>

        <div id="surgery" class="row mb-4 d-none">
            <div class="col">
                <p>外科相關內容</p>
            </div>
        </div>

        <div id="gynecology" class="row mb-4 d-none">
            <div class="col">
                <p>婦科相關內容</p>
            </div>
        </div>

        <div id="pediatrics" class="row mb-4 d-none">
            <div class="col">
                <p>兒科相關內容</p>
            </div>
        </div>
    </div>

    <script>
        function updateText(text) {
            document.getElementById('displayText').innerText = text;
        }

        function showSection(section) {
            // 隱藏所有div
            document.getElementById('internal').classList.add('d-none');
            document.getElementById('surgery').classList.add('d-none');
            document.getElementById('gynecology').classList.add('d-none');
            document.getElementById('pediatrics').classList.add('d-none');
            
            // 顯示對應的div
            document.getElementById(section).classList.remove('d-none');
            
            // 更新加大文字區
            switch (section) {
                case 'internal':
                    updateText('內科');
                    break;
                case 'surgery':
                    updateText('外科');
                    break;
                case 'gynecology':
                    updateText('婦科');
                    break;
                case 'pediatrics':
                    updateText('兒科');
                    break;
            }
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
